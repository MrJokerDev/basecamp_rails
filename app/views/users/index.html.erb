<%= render 'navbar/navbar' %>

<h1>Users</h1>

<%= link_to 'Create user', new_user_path, :class => "card-link btn btn-success mt-3 mb-3" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <% if current_user.admin? %>
      <th scope="col">Action</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  
    <% @users.each do |user| %>
        <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <% if current_user.admin? %>
          <td class="d-flex">
              <%= link_to edit_user_path(user), class: "card-link btn btn-primary m-1" do %>
                <i class="bi bi-pencil-square"></i>
              <% end %>
              <%= button_to user_path(user), method: 'delete', data: { confirm: 'Are you sure?' }, class: "card-link btn btn-danger m-1" do %>
                <i class="bi bi-trash3-fill"></i>
              <% end %>
          </td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>